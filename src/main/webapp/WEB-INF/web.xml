<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!-- Begin Spring-specific configuration -->
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>org.springframework.web.context.request.RequestContextListener</listener-class>
    </listener>
    <!-- END Spring configuration -->
    <!-- begin additional Spring Security config -->
    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <!-- end Spring security config -->
    <servlet>
        <servlet-name>VideogameController</servlet-name>
        <servlet-class>edu.wctc.adw.videogameapp.controller.VideogameController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>VideogameController</servlet-name>
        <url-pattern>/VideogameController</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SystemController</servlet-name>
        <servlet-class>edu.wctc.adw.videogameapp.controller.GameSystemController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemController</servlet-name>
        <url-pattern>/SystemController</url-pattern>
    </servlet-mapping>
    
      <!-- Add for Spring REST -->
    <servlet>
        <servlet-name>exporter</servlet-name>
        <servlet-class>org.springframework.data.rest.webmvc.RepositoryRestDispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>exporter</servlet-name>
        <url-pattern>/api/v1/*</url-pattern>
    </servlet-mapping>
    <!-- end spring rest -->
</web-app>
